{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "preserve",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": "./",
        "checkJs": false,
        "paths": {
            "@root/*": ["./*"],
            "@/*": ["src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["vite/client", "node"],
        "skipLibCheck": true
    },
    "include": ["src", "typings"],
    "exclude": ["node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
